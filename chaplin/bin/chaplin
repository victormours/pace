#!/usr/bin/env ruby

require_relative '../lib/chaplin'

require "rack"
chaplin_server = Chaplin::Server.new('localhost:8080')

static_urls = Dir.new('public').map do |entry|
  '/' + entry
end

static_middleware = Rack::Static.new(chaplin_server,
                                     urls: static_urls,
                                     index: 'index.html',
                                     root: 'public')
Rack::Server.start(app: static_middleware, Port: 8081)
